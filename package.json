        ]
    },
    "license": "MIT",
    "devDependencies": {
        "@pika/pack": "^0.5.0",
        "@pika/plugin-build-node": "^0.9.2",
        "@pika/plugin-ts-standard-pkg": "^0.9.2",
        "@types/node": "^13.7.7",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.8",
        "prettier": "^1.19.1",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "@types/fs-extra": "^8.1.0",
        "@types/lodash.template": "^4.4.6",
        "@types/recursive-readdir": "^2.2.0",
        "buurman-utils": "^1.0.0",
        "fs-extra": "^8.1.0",
